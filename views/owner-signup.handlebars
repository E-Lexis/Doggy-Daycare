<div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                  <div class="card-header">Sign Up</div>
                    <div class="card-body">
                      <form class="signup-form">
                        <div class="form-group row">
                          <label for="username-signup" class="col-md-4 col-form-label text-md-right">Username:</label>
                          <div class="col-md-6">
                            <input type="text" id="username-signup" class="form-control"/>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label for="password-signup" class="col-md-4 col-form-label text-md-right">Password:</label>
                          <div class="col-md-6">
                            <input type="password" id="password-signup" class="form-control"/>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label for="email-signup" class="col-md-4 col-form-label text-md-right">Email:</label>
                          <div class="col-md-6">
                            <input type="text" id="email-signup" class="form-control"/>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label for="first-name-signup" class="col-md-4 col-form-label text-md-right">First Name:</label>
                          <div class="col-md-6">
                            <input type="text" id="first-name-signup" class="form-control"/>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label for="last-name-signup" class="col-md-4 col-form-label text-md-right">Last Name:</label>
                          <div class="col-md-6">
                            <input type="text" id="last-name-signup" class="form-control"/>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label for="phone-signup" class="col-md-4 col-form-label text-md-right">Phone Number:</label>
                          <div class="col-md-6">
                            <input type="integer" id="phone-signup" class="form-control"/>
                          </div>
                        </div>
                        <div class="col-md-6 offset-md-4">
                        <button type="submit">Sign Up</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
          </div>
</div>
<script src="/public/js/signup.js"></script>
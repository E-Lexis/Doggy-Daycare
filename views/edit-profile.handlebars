<section class="py-5 text-center container">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h4 class="my-3">{{owner.name}}</h4>
            <div class="d-flex justify-content-center mb-2">
              <button type="button" class="btn btn-primary">Edit Info</button>
              <button type="button" class="btn btn-outline-primary ms-1">Add Dog</button>
            </div>
          </div>
        </div>
    </div>
<div class="col-lg-8">
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <form class="edit-profile-form">
                <div class="form-group row">
                    <label for="username-edit" class="col-md-4 col-form-label text-md-right">Username:</label>
                    <div class="col-md-6">
                        <input type="text" id="username-edit" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password-edit" class="col-md-4 col-form-label text-md-right">Password:</label>
                    <div class="col-md-6">
                        <input type="password" id="password-edit" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email-edit" class="col-md-4 col-form-label text-md-right">Email:</label>
                    <div class="col-md-6">
                        <input type="text" id="email-edit" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="first-name-edit" class="col-md-4 col-form-label text-md-right">First Name:</label>
                    <div class="col-md-6">
                        <input type="text" id="first-name-edit" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="last-name-edit" class="col-md-4 col-form-label text-md-right">Last Name:</label>
                    <div class="col-md-6">
                        <input type="text" id="last-name-edit" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="phone-edit" class="col-md-4 col-form-label text-md-right">Phone Number:</label>
                    <div class="col-md-6">
                        <input type="integer" id="phone-edit" class="form-control"/>
                    </div>
                </div>
                <div class="col-md-6 offset-md-4">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
</div>
</div>  
</section>


<script src="/public/js/edit-profile.js"></script>